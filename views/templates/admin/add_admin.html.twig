{% extends "layout_bo.html.twig" %}

{% block title %}Ajouter un Administrateur{% endblock %}
{% block content %}
   <!-- BREADCRUMB -->
   <nav class="breadcrumbs breadcrumbs-bo">
      <ul>
         <li><a href="/blog_php/backoff/dashboard" class="home">Accueil</a></li>
         <li><a href="/blog_php/backoff/users?page=1">Liste des utilisateurs</a></li>
         <li class="threadTitle">Ajouter un administrateur</li>
         <li class="threadTitle300" title="Ajouter un article">...</li>
      </ul>
   </nav>
   <!-- MAIN CONTENT -->
   <div class="containerAdd containerEdit">
      <h3><i class="fa fa-plus"></i>Ajouter un administrateur</h3>
      <form method="POST">
         <div>
            <label for="lastname">Nom :</label>
            <input type="text" id="lastname" name="lastname" value="{% if lastname is defined %}{{ lastname|e }}{% endif %}" maxlength="100" required />
            {% if errors.emptyLastname is defined %}
               <p>{{ errors.emptyLastname|e }}</p>
            {% elseif errors.invalidLastname is defined %}
               <p>{{ errors.invalidLastname|e }}</p>
            {% endif %}
         </div>
         <div>
            <label for="firstname">Pr√©nom :</label>
            <input type="text" id="firstname" name="firstname" value="{% if firstname is defined %}{{ firstname|e }}{% endif %}" maxlength="100" required />
            {% if errors.emptyFirstname is defined %}
               <p>{{ errors.emptyFirstname|e }}</p>
            {% elseif errors.invalidFirstname is defined %}
               <p>{{ errors.invalidFirstname|e }}</p>
            {% endif %}
         </div>
         <div>
            <label for="username">Nom d'utilisateur :</label>
            <input type="text" id="username" name="username" value="{% if username is defined %}{{ username|e }}{% endif %}" required />
            {% if errors.emptyUsername is defined %}
               <p>{{ errors.emptyUsername|e }}</p>
            {% elseif errors.invalidUsername is defined %}
               <p>{{ errors.invalidUsername|e }}</p>
            {% elseif errors.usedUsername is defined %}
               <p>{{ errors.usedUsername|e }}</p>
            {% endif %}
         </div>
         <div>
            <div>
               <label for="email">E-mail :</label>
               <input type="email" id="email" name="email" value="{% if email is defined %}{{ email|e }}{% endif %}" maxlength="100" required />
               {% if errors.emptyMail is defined %}
                  <p>{{ errors.emptyMail|e }}</p>
               {% elseif errors.invalidMail is defined %}
                  <p>{{ errors.invalidMail|e }}</p>
               {% elseif errors.usedMail is defined %}
                  <p>{{ errors.usedMail|e }}</p>
               {% endif %}
            </div>
         </div>
         <div>
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="password" value="{% if password is defined %}{{ password|e }}{% endif %}" required />
            {% if errors.emptyPass is defined %}
               <div><p>{{ errors.emptyPass|e }}</p></div>
            {% elseif errors.invalidPass is defined %}
               <p>{{ errors.invalidPass|e }}</p>
            {% endif %}
         </div>
         <div>
            <label for="passwordConfirmation">Confirmer le mot de passe :</label>
            <input type="password" id="passwordConfirmation" name="passwordConfirmation" required />
            {% if errors.invalidPassConf is defined %}
               <div><p>{{ errors.invalidPassConf|e }}</p></div>
            {% endif %}
         </div>
         <input type="submit" class="btn" name="addAdmin" value="Valider" />
      </form>
   </div>
{% endblock %}